<?xml version="1.0" encoding="UTF-8"?>

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.developersweb.controllers.UserController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/displayInfo</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.developersweb.controllers.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>login</url-pattern>
  </filter-mapping>

  <!--Logout servlet-->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.developersweb.controllers.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.developersweb.controllers.SignupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>register</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>register.jsp</welcome-file>
  </welcome-file-list>

</web-app>
